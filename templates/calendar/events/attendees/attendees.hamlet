
<div.overlay ##{idOverlay}>

^{widgetTopbar (Just (CalendarEventsR month day,[])) (msgr MsgEvent) idOverlay Nothing Nothing}

<main.responsive.no-padding>

  <div.tabs.min>
    <a href=@{CalendarEventR month day eid}>
      _{MsgDetails}
      
    <a.active href=@{CalendarEventAttendeesR month day eid}>
      _{MsgAttendees}
    
  <div.page.active>
    $forall (Entity aid (Attendee _ _ rdate), _, Entity uid (User email _ uname _ _ _ _ _ _)) <- attendees

      <a.row.padding.no-margin.wave href=@{CalendarEventAttendeeR month day eid aid}>

        <img.circle src=@{DataR $ UserPhotoR uid} alt=_{MsgPhoto} loading=lazy>

        <div.content.max>
          <div.headline.large-text>
            $maybe name <- uname
              #{name}
            $nothing
              #{email}
          <div.supporting-text.small-text>
            _{MsgRegistrationDate}
          <div.supporting-text.small-text>
            $with dt <- show rdate
              <time.full-datetime datetime=#{dt}>
                #{dt}

        <i>arrow_forward_ios

      <hr>
    
